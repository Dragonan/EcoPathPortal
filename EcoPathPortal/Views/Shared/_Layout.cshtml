@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Еко Пътеки БГ</title>
</head>
<body>
    <div>
        @if (Request.IsAuthenticated) {
            <text>
                Hello, @Html.ActionLink(User.Identity.Name, "Profile", "User", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
                    @Html.AntiForgeryToken()
                    @Html.ActionLink("Излез", "Logout", "Account")
                }
            </text>
        }
        else
        {
            @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })<br />
            @Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })<br />
        }
		@Html.ActionLink("Начало", "Index", "Home")
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
